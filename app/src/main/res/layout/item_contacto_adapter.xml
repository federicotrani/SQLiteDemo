<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_contacto_adapter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtContactoNombre"
        tools:text="Nombre Contacto"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtContactoTelefono"
        tools:text="Nombre Contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txtContactoEmail"
        tools:text="Email Contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtContactoDomicilio"
        tools:text="Domicilio Contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>